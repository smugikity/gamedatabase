    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": ["runserver"],
            "justMyCode": true,
            "serverReadyAction": {
                "pattern": "Starting development server at http://127.0.0.1:8000/",
                "uriFormat": "http://localhost:8000",
                "action": "debugWithChrome"
              }
        }
    ]
}